<h1>News to Watch</h1>

<h2>Business News of the Day:</h2>

<ul>
  {{#each articles}}
    <li>
        
        <h3>{{title}}</h3>
        <h5>{{body}}</h5>
        <a href={{link}}><img src={{image}}></a>
        <p>Click on the picture to see video.</p>

        <div>
            <ul>Comments:
              {{#each comments}}
              <li>
                  <p>{{name}} said: {{body}}
                      <button data-id={{_id}} + id='deleteBtn'>Delete Comment</button>
                  </p>
              </li>
              
              {{/each}}

              <li class="changeable-div">
                  <div id="comments-left-{{_id}}"></div>
              </li>
            </ul> 
           
            
            <form class="create-form">

                <div class="form-group">
                    <label for="note-title">Your Nickname:</label>
                    <input type="text" id="note-title-{{_id}}" name="note-title">
                </div>

                <div class="form-group">
                    <label for="note-body">Comment:</label><br>
                    <textarea name="note-body" id="note-body-{{_id}}" cols="50" rows="3"></textarea> <br>
                </div>

                <button id="saveBtn" data-id="{{_id}}" type="submit">Leave Comment</button>
            </form>
        </div>
    </li>
    <br>
    <br>
    <br>
    <br>
    <br>
  
  {{/each}}
</ul>


 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/news.js"></script>