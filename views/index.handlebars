<h1>Articles to Read</h1>

<h2>Articles of the day:</h2>

<ul>
  {{#each articles}}
    <li>
        {{title}}
        <p>To view Article, click <a href={{link}}>Here</a></p>
    </li>
  
  {{/each}}
</ul>


<h2>Your Notes:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="note-title">Title:</label>
    <input type="text" id="note-title" name="note-title">
  </div>

  <div class="form-group">
    <label for="note-body">Body:</label><br>
    <textarea name="note-body" id="note-body" cols="30" rows="10"></textarea> <br>
  </div>

  <button type="submit">Save Note</button>
  <button type="submit">Update Note</button>
</form>
